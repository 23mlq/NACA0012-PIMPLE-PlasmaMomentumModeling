FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 6;  // Number of subdomains (4 processors)

method          simple;  // Simple method for decomposition

simpleCoeffs
{
    n               (3 2 1);  // The number of divisions in the x, y, and z directions (2 x 1 x 2)
}



